<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="buu.informatics.s59160141.parkingplace.Login">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray">

        <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_50dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="@dimen/margin_50dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingEnd="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="@dimen/margin_50dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingEnd="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        <Button
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="@dimen/margin_50dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="@font/roboto"
                android:text="@string/text_btnLogin"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password" />

        <TextView
                android:id="@+id/alert_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/alert_login"
                android:textColor="@android:color/holo_red_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
